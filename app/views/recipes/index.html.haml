- title("Recipes")
.row
  .col-lg-12.col-sm-12.col-xs-12
    %h1
      %i.fa.fa-cutlery
      = "Phil's Curated #{@current_tags ? "#{@current_tags}" : "Recipes"}#{params[:s].blank? ? "" : " From #{params[:s]}"}#{params[:q].blank? ? "" : " Containing #{params[:q]}"}"
.row
  .col-lg-9.col-sm-12.col-xs-12
    - if params[:v] == "grid"
      .row
        - @recipes.each do |recipe|
          .col-lg-3.col-sm-4.col-xs-6.grid-img-container
            = link_to image_tag("recipes/#{recipe.image}"), recipe_path(recipe), class: "thumbnail img-responsive"
    - else
      - @recipes.each do |recipe|
        .recipe
          = link_to recipe.name, recipe_path(recipe)
    = paginate @recipes
  .col-lg-3.col-sm-12.col-xs-12
    .row
      .btn-group.view-btn-group{"aria-label" => "view button group", :role => "group"}
        = link_to ('<i class="fa fa-list"></i>').html_safe, params.merge({v: "list"}), class: "btn btn-default list-view-btn"
        = link_to ('<i class="fa fa-th-large"></i>').html_safe, params.merge({v: "grid"}), class: "btn btn-default grid-view-btn"
    .row
      %ul.list-group
        - @tags.each do |g|
          - g.each do |k,v|
            %li.list-group-item
              %span.badge
                = v
              = link_to k, recipes_path({t: k})
