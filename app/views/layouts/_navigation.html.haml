%nav.navbar.navbar-inverse
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Pubprika', root_path, class: 'navbar-brand'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav
        = render 'layouts/navigation_links'
      .hidden-xs
        %form.navbar-form.navbar-right{:role => "search"}
          .form-group
            .input-group
              %span.input-group-addon
                %i.fa.fa-search
              %input.form-control.typeahead{:placeholder => "Name/Site/Ingredient", :type => "text", :name => "q"}
              %span.input-group-btn
                %button.btn.btn-default{:type => "submit"} Search
      .hidden-lg.hidden-md.hidden-sm
        %form.navbar-form{:role => "search"}
          .form-group
            .input-group
              %span.input-group-addon
                %i.fa.fa-search
              %input.form-control{:placeholder => "Name/Site/Ingredient", :type => "text", :name => "q"}
              %span.input-group-btn
                %button.btn.btn-default{:type => "submit"} Search
